{
    "name": "simialbi/composer-asset-plugin",
    "description": "NPM/Bower Dependency Manager for Composer 2",
    "keywords": [
        "npm",
        "bower",
        "dependency manager",
        "package",
        "asset",
        "composer",
        "composer2",
        "nodejs"
    ],
    "homepage": "https://github.com/simialbi/composer-asset-plugin",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "FranÃ§ois Pluchino",
            "email": "francois.pluchino@gmail.com"
        },
        {
            "name": "Simon Karlen",
            "email": "simi.albi@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Fxp\\Composer\\AssetPlugin\\": "src"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Fxp\\Composer\\AssetPlugin\\Tests\\": "tests"
        }
    },
    "extra": {
        "class": "Fxp\\Composer\\AssetPlugin\\FxpAssetPlugin",
        "plugin-modifies-downloads": true,
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
